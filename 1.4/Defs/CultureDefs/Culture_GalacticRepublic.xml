<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<CultureDef>
		<defName>OuterRim_CultureRepublic</defName>
		<label>republic law</label>
		<description>The culture of the Galactic Republic</description>
		<ideoNameMaker MayRequire="Ludeon.RimWorld.Ideology">OuterRim_IdeoRepublic</ideoNameMaker>
		<deityNameMaker MayRequire="Ludeon.RimWorld.Ideology">OuterRim_DeityRepublic</deityNameMaker>
		<deityTypeMaker MayRequire="Ludeon.RimWorld.Ideology">OuterRim_DeityTypeMakerRepublic</deityTypeMaker>
		<leaderTitleMaker MayRequire="Ludeon.RimWorld.Ideology">OuterRim_LeaderTitleMakerRepublic</leaderTitleMaker>
		<festivalNameMaker MayRequire="Ludeon.RimWorld.Ideology">OuterRim_NamerFestivalRepublic</festivalNameMaker>
		<allowedPlaceTags>
			<li>OuterRim_OriginRepublic</li>
		</allowedPlaceTags>
		<iconPath>OuterRim/UI/Cultures/Republic</iconPath>
		<iconColor>(0.8, 0.8, 0.8)</iconColor>
		<thingStyleCategories>
			<!-- <li MayRequire="Ludeon.RimWorld.Ideology">
				<category>OuterRim_StyleRepublic</category>
				<priority>2</priority>
			</li> -->
		</thingStyleCategories>
		<styleItemTags>
			<li>
				<tag>Urban</tag>
				<baseWeight>1</baseWeight>
				<weightFactor>1</weightFactor>
			</li>
			<li>
				<tag>NoBeard</tag>
				<baseWeight>10</baseWeight>
				<weightFactor>1</weightFactor>
			</li>
			<li>
				<tag>BeardRural</tag>
				<baseWeight>0.1</baseWeight>
				<weightFactor>1</weightFactor>
			</li>
			<li>
				<tag>BeardUrban</tag>
				<baseWeight>0.2</baseWeight>
				<weightFactor>1</weightFactor>
			</li>
			<li>
				<tag>NoTattoo</tag>
				<baseWeight>1</baseWeight>
				<weightFactor>1</weightFactor>
			</li>
		</styleItemTags>
		<modExtensions>
			<li Class="TabulaRasa.DefModExt_CultureExtended">
				<ideoIconDef>OuterRim_Republic</ideoIconDef>
			</li>
		</modExtensions>
	</CultureDef>

	<RulePackDef MayRequire="Ludeon.RimWorld.Ideology">
		<defName>OuterRim_IdeoRepublic</defName>
		<rulePack>
			<rulesStrings>
				<!-- From symbol pack -->
				<li>r_ideoName->Republic Law</li>
				<li>r_ideoAdjective->Republic</li>
				<li>r_memberName->citizen</li>

				<!-- Generic content -->
				<li>globalAdjective->Galactic</li>
				<li>globalAdjective->New</li>
				<li>globalAdjective->True</li>
				<li>globalAdjective->Reformed</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>

	<RulePackDef MayRequire="Ludeon.RimWorld.Ideology">
		<defName>OuterRim_DeityRepublic</defName>
		<rulePack>
			<rulesStrings>
				<li>r_deityName->The Force</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>

	<RulePackDef MayRequire="Ludeon.RimWorld.Ideology">
		<defName>OuterRim_DeityTypeMakerRepublic</defName>
		<rulePack>
			<rulesStrings>
				<li>r_deityType->the force</li>

				<li>god->the force</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>

	<RulePackDef MayRequire="Ludeon.RimWorld.Ideology">
		<defName>OuterRim_LeaderTitleMakerRepublic</defName>
		<rulePack>
			<rulesStrings>
				<li>r_leaderTitle->senator</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>

	<RulePackDef MayRequire="Ludeon.RimWorld.Ideology">
		<defName>OuterRim_NamerFestivalRepublic</defName>
		<include>
			<li>NamerFestivalGlobal</li>
		</include>
	</RulePackDef>

</Defs>